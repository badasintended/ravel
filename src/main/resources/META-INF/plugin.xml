<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>lol.bai.ravel</id>
    <name>Ravel Remapper</name>
    <vendor>deirn.bai.lol</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <depends optional="true" config-file="lol.bai.ravel-kotlin.xml">org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="lol.bai.ravel-json.xml">com.intellij.modules.json</depends>

    <resource-bundle>messages.RavelBundle</resource-bundle>

    <actions>
        <action id="lol.bai.ravel.ui.RemapperAction"
                class="lol.bai.ravel.ui.RemapperAction"
                icon="/icons/pluginAction.svg">
            <add-to-group group-id="RefactoringMenu"/>
        </action>

        <group id="lol.bai.ravel.ui.MappingActionGroup"
               class="lol.bai.ravel.ui.MappingActionGroup"
               icon="AllIcons.General.Add"
               popup="true">

            <action id="lol.bai.ravel.ui.AddMappingAction"
                    class="lol.bai.ravel.ui.AddMappingAction"
                    icon="AllIcons.FileTypes.AddAny"/>

            <action id="lol.bai.ravel.ui.DownloadMappingAction"
                    class="lol.bai.ravel.ui.DownloadMappingAction"
                    icon="AllIcons.Actions.Download"/>
        </group>

        <action id="lol.bai.ravel.ui.MarkAllModuleAction"
                class="lol.bai.ravel.ui.MarkAllModuleAction"
                icon="AllIcons.Actions.AddList"/>

        <action id="lol.bai.ravel.ui.MarkModuleAction"
                class="lol.bai.ravel.ui.MarkModuleAction"
                icon="AllIcons.General.Add"/>

        <action id="lol.bai.ravel.ui.UnmarkModuleAction"
                class="lol.bai.ravel.ui.UnmarkModuleAction"
                icon="AllIcons.General.Remove"/>
    </actions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>

    <extensionPoints>
        <extensionPoint name="remapper"
                        beanClass="lol.bai.ravel.util.ExtensionBean"
                        dynamic="true">
            <with attribute="implementation" implements="lol.bai.ravel.remapper.RemapperFactory"/>
        </extensionPoint>

        <extensionPoint name="mappingDownloader"
                        beanClass="lol.bai.ravel.util.ExtensionBean"
                        dynamic="true">
            <with attribute="implementation" implements="lol.bai.ravel.mapping.downloader.MappingDownloader"/>
        </extensionPoint>
    </extensionPoints>

    <extensions defaultExtensionNs="lol.bai.ravel">
        <remapper id="mixin" implementation="lol.bai.ravel.remapper.MixinRemapperFactory" order="first"/>
        <remapper id="java" implementation="lol.bai.ravel.remapper.JavaRemapperFactory"/>
        <remapper id="class-tweaker" implementation="lol.bai.ravel.remapper.ClassTweakerRemapperFactory"/>

        <mappingDownloader id="yarn" implementation="lol.bai.ravel.mapping.downloader.YarnDownloader"/>
        <mappingDownloader id="mojmap" implementation="lol.bai.ravel.mapping.downloader.MojMapDownloader"/>
    </extensions>
</idea-plugin>
